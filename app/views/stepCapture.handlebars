
<div id="video_wrapper">

  <div id="feed">
    <h2 id='directions'>capture step</h2>
   <img src="/mask.png">
   <video id="player" autoplay="true"></video>
  </div> <!-- end feed -->

  <div id="capture">
    <canvas id="canvas" width="700" height="400" style="display: hidden"></canvas>
 
    
    <div id="form_wrapper">
      <input name="direction" id="direction" placeholder="add a direction">
      <textarea name="image" id="image" style="display: none;"></textarea>

      <div class='button_wrapper'>
        <button type='submit' class='capture_nav_item' id='confirm'></button>
        <button type="button" class='capture_nav_item' id='reload'></button>
        <a href="/"><button type="button" class='capture_nav_item' id='exit'></button></a>
      </div>
    </div>

  

  </div>	<!-- end capture -->
</div>  <!-- end video wrapper -->
<div class="button_wrapper">
  <button type="button" id='snap'></button>
  <a href="/task/{{id}}"><button type="button" id="next"></button></a>
</div>

