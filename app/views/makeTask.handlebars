<div id="wrapper">
    
    <div id="top-nav">
        <h2>{{user.local.username}}</h2>
        <h3><a href="/logout" class="btn btn-default btn-sm">Logout</a></h3>
        <div id="logo"></div>
    </div>{{!-- end top nav --}}
    
    <div id='form_wrapper'>
        <!-- TASK FORM -->
        <form id="task_form" action="/teacher/create" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="title">
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="objective" placeholder="objective">
            </div>

            <div class="form-group">
                <textarea rows="4" cols="50" class="form-control" name="description" placeholder="describe the problem"></textarea>
            </div>
            
            <div class='button_wrapper'>
                <button id="create" type="submit" class="btn btn-warning btn-lg">Create</button>
            </div>
        </form>
    </div> {{!-- end form wrapper --}}
</div>