
<div id="wrapper">

	<div id="logo"><img src="./images/logo.png"></div>
	
	<div id="login_wrapper">
	
		<form id="user_form" action="/signup" method="post">
			<input type="hidden" class="form-control" name="userType" value='teacher'>
			<div class="form-group">
				<input type="text" class="form-control" name="username" placeholder="username">
			</div>

			<div class="form-group">
				<input type="password" class="form-control" name="password" placeholder="password">
			</div>

			<div class="form-group">
				<input type="text" class="form-control" name="first" placeholder="first">
				<input type="text" class="form-control" name="last" placeholder="last">
				<input type="email" class="form-control" name="email" placeholder="email">
			</div>
			
			<div class='button-group'>
				{{!-- hidden to start --}}
				<button type="submit" class="btn" id="signup">signup</button>
				<button type="button" class="btn" id="cancel">Cancel</button>
			</div>
		</form>

		{{#if message}}
			<div class="alert alert-danger">{{message}}</div>
		{{/if}}

	</div>
</div>

<script>
	$('#cancel').click(function(){
		window.location = '/login'
	})
</script>


