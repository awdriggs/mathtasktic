<div id="wrapper">
	
	<div id="top-nav">
		<h2>{{user.local.username}}</h2>
		<h3><a href="/logout" class="btn btn-default btn-sm">Logout</a></h3>
		<div id="logo"></div>
	</div>{{!-- end top nav --}}
	
	<br>

	<div id="teacher_nav" class="button_wrapper">

		<a href="/"><button>tasks</button></a>
		<a href="/teacher/students"><button>students</button></a>
	</div>
	<div class="button_wrapper newtask">
		<a href="/teacher/create"><button type="button" class="add"></button></a>
	</div>
	
	{{#each data}}
	<a href="/teacher/view/{{_id}}">
		<div class="task_list">
			<p>{{dateformat}}</p>
			<p class="title"> {{title}}</p>
			<p>{{steps.length}} steps</p>
		</div>
	</a>
		
	{{/each}}

	</div>
</div>