
<div id="wrapper">

	<div id="logo"><img src="./images/logo.png"></div>
	
	<div id="login_wrapper">
	
		<form id="user_form" action="/login" method="post">
			<div class="form-group">
				<input type="text" class="form-control" name="username" placeholder="username">
			</div>

			<div class="form-group">
				<input type="password" class="form-control" name="password" placeholder="password">
			</div>
			
			<div class='button-group'>
				<button id="login" type="submit" class="btn btn-warning btn-lg">Login</button>
				<button type="submit" class="btn" id="create">Create</button>
				{{!-- hidden to start --}}
				<button type="button" class="btn" id="signup">signup</button>
				<button type="button" class="btn" id="cancel">Cancel</button>
			</div>
		</form>

		{{#if message}}
			<div class="alert alert-danger">{{message}}</div>
		{{/if}}
	</div>
</div>


