<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Mathtasktic</title>
    <link rel="stylesheet" href="./css/main.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src='/javascript/login.js'></script>
</head>
<body>
<div id="wrapper">

    <!-- LOGIN FORM -->
    <form id="user_form" action="/login" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="username">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="password">
        </div>
        
        <button id="login" type="submit" class="btn btn-warning btn-lg">Login</button>
        
        <button type="submit" class="btn" id="create">Create</button>

        
        <button type="button" class="btn" id="signup">signup</button>
        <button type="button" class="btn" id="cancel">Cancel</button>
    </form>
    
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

</div>
</body>
</html>